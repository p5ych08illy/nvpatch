<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>nvpatch</ToolCommandName>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <TtsCodeSign>True</TtsCodeSign>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Copyright>Copyright Â© 2021 Topten Software.  All Rights Reserved</Copyright>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageIcon>nuget-icon.png</PackageIcon>
    <PackageProjectUrl>https://github.com/toptensoftware/nvpatch</PackageProjectUrl>
    <PackageTags>NvOptimusEnablement, AmdPowerXpressRequestHighPerformance, exe, patch</PackageTags>
    <Description>A simple utility to add the NvOptimusEnablement and AmdPowerXpressRequestHighPerformance export symbols to an existing executable</Description>
    <RepositoryUrl>https://github.com/toptensoftware/nvpatch</RepositoryUrl>
  </PropertyGroup>

</Project>
